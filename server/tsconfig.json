{
    "compilerOptions": {
      "target": "ES6",
      "lib": [
        "dom",
        "dom.iterable",
        "esnext"
      ],
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "noFallthroughCasesInSwitch": true,
      "module": "esnext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": true,
      "jsx": "preserve",
      "allowJs": true,
      "incremental": true
    },
    "include": ["models"],
    "ts-node": {
      "compilerOptions": {
        "module": "commonjs"
      }
    },
    "exclude": [
      "node_modules"
    ]
  }
  